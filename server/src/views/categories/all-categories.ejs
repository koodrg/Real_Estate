<%- include ('../partials/header.ejs') %>

<h2 class="page-title" style="margin-left: 30px;">Categories</h2>
<a href="/admin/categories/add-category" class="btn btn-primary" style="margin-left: 30px;">Add a new category</a>
<br><br>

<table class="table table-striped" style="margin: 30px;">

    <thead>
        <tr>
            <th>Categories</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% categories.forEach(function(cate){ %>
        <tr>
            <td><%= cate.cate_name %></td>
            <td><a href="/admin/categories/edit-category/<%= cate._id %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%= cate._id %>">Delete</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<script>
    $('a.confirmDeletion').on('click', function () {
        if (!confirm('Confirm deletion'))
            return false;
    });
    </script>

